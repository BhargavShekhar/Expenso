generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String        @id @default(uuid())
  email    String        @unique
  name     String?
  groups   GroupMember[]
  expenses Expense[]
}

model GroupMember {
  id      String @id @default(uuid())
  userId  String
  users   User @relation(fields: [userId], references: [id])
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
}

model Group {
  id        String        @id @default(uuid())
  name      String
  members   GroupMember[]
  expenses  Expense[]
  userId    String
  creadedBy String
}

model Expense {
  id         String   @id @default(uuid())
  title      String
  amount     String
  paidBy     String
  splitBy    String[]
  groupId    String
  receiptUrl String?
  createdAt  DateTime @default(now())
  User       User?    @relation(fields: [userId], references: [id])
  userId     String?
  Group      Group    @relation(fields: [groupId], references: [id])
}
